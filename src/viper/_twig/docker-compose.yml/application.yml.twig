      - {{ (syncvolume) ? @('workspace.name') ~ '-sync:/app:nocopy' : ('./:/app' ~ @('docker.compose.host_volume_options')) }}
      - ./.my127ws/application:/home/client/application
      - ./.my127ws/docker/image/client/root/lib/task:/lib/task
      - ./.my127ws:/.my127ws
    labels:
      - traefik.backend={{ @('workspace.name') }}
      - traefik.frontend.rule=Host:client-{{ @('hostname') }}
      - traefik.docker.network=my127ws
      - traefik.port={{ @('app.client.port')}}
    networks:
      private: {}
      shared: {}
{% else %}
    image: {{ @('docker.repository') ~ ':' ~ @('app.version') ~ '-client' }}
    command: [sleep, infinity]
    expose:
      - {{ @('app.client.port')}}
